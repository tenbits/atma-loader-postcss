{
    "name": "atma-loader-postcss",
    "version": "1.0.7",
    "description": "PostCSS compiler for `atma-io`, `IncludeJS` and `atma-server`.",
    "author": "Alexander Kit (alex.kit@atmajs.com)",
    "main": "index.js",
    "license": "MIT",
    "dependencies": {
        "atma-io-middleware-base": "^1.0.37",
        "atma-utils": "^0.1.13",
        "i": "^0.3.6",
        "npm": "^6.9.0",
        "postcss": "^7.0.16"
    },
    "devDependencies": {
        "@types/node": "^10.1.3",
        "app-bundler": "0.0.47",
        "atma-loader-ts": "^1.1.6"
    },
    "app-bundler": {
        "file": "src/index.ts",
        "outputMain": "index.js",
        "package": {
            "module": "commonjs",
            "commonjs": {
                "output": "simplified"
            }
        },
        "defaultExtensions": {
            "js": "ts"
        },
        "middlewares": {
            "ts": [
                "atma-loader-ts:read"
            ]
        },
        "dynamicDependencies": [
            "postcss",
            "atma-utils",
            "atma-io-middleware-base"
        ]
    },
    "scripts": {
        "build": "app-bundler",
        "release": "npm run build && atma bump && npm publish && git commit -am \"update (base)\" && git push"
    }
}
